<!DOCTYPE html>
<html>
  <head>
    <title>Rezoom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <h1>Rezoom</h1>
        <% if logged_in? %>
          <%= link_to 'My Account', current_user %><br/>
          <%= link_to 'View Resumes', resumes_path %><br/>
          <%= link_to 'Logout', logout_path, method: :delete %>
        <% else %>
          <%= link_to 'Login', login_path %><br/>
          <%= link_to 'New Account', new_user_path %>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
