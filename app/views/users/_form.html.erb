  <div class="form-group">
    <%= form.text_field :industry, placeholder: "Industry", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control" %>
  </div>
  
  <div class="btn btn-sm btn-primary topBtn">
  <i class="fa fa-sign-in"></i>
    <%= form.submit "Create", class: "btn btn-sm" %>
  </div>

<% end %>
