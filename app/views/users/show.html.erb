<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @user.industry %>
</p>

<table>
  <thead>
  <tr>
    <th>Resume</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.resumes.each do |resume| %>
    <tr>
      <td><%= resume.file %></td>
      <td><%= link_to 'View', resume %></td>
      <% if resume.user_id == current_user.id %>
        <td><%= link_to 'Delete', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'Add Resume', new_resume_path %> |
<%= link_to 'Edit Account', edit_user_path(@user) %> |
<%= link_to 'Delete Account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
